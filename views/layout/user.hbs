


 {{>user-header}}

  

  <section>
    
    <div class="container">
      <div class="row mt-3">
        {{#each products}}
        <div class="col-md-4 mb-3">
          <div class="card h-100" style="width: 19rem; background-color: antiquewhite;" >
            <img style="width: 300px; height: 400px;" src="{{this.image}}" class="card-img-top" alt="...">
            <div class="card-body" style="">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.shortDescription}}</p>
              <a href="#" class="btn btn-primary">Add to Cart</a><br>
              <h5 class="card-title mt-2">{{this.price}}</h5>
              <h5 class="badge bg-success text-wrap">{{this.category}}</h5>
            </div>
          </div>
        </div>
         {{/each}}
      </div>
    </div>

   </section>

   