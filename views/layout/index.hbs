  <section>
    
    <div class="container">
      <div class="row mt-3">
        {{#each products}}
        <div class="col-md-4 mb-3">
          <div class="card h-100" style="width: 18rem;">
            <img src="{{this.image}}" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.shortDescription}}</p>
              <a href="#" class="btn btn-primary">Add to Cart</a><br>
              <h5 class="badge bg-primary text-wrap">{{this.category}}</h5>
            </div>
          </div>
        </div>
         {{/each}}
      </div>
    </div>

   </section>

   