{{>user-header}}
<link rel="stylesheet" href="/stylesheets/placeOrder.css">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="order-summary">
                <h1 class="mb-4 text-center">Order Summary</h1>

                <!-- Address Section -->
                <form id="order-form" action="/submit-order" method="post" >
                    <div class="form-section">
                        <h3>Shipping Address</h3>
                        <input type="text" id="user" name="userId" value="{{userId}}" hidden>
                        <div class="form-group">
                            <label for="fullName">Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter your full name" value="prethwi" required>
                        </div>
                        <div class="form-group">
                            <label for="fullName">Phone Number</label>
                            <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter your Number" value="7894561230" required>
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <textarea class="form-control" id="address" name="address" rows="3" placeholder="Enter your address"  required>no address</textarea>
                        </div>
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" class="form-control" id="city" name="city" placeholder="Enter your city" value="mtdy" required>
                        </div>
                        <div class="form-group">
                            <label for="postalCode">Postal Code</label>
                            <input type="text" class="form-control" id="postalCode" name="postalCode" placeholder="Enter your postal code" value="123456" required>
                        </div>
                        
                    </div>

                    <!-- Order Total -->
                    <div class="form-section">
                        <h3>Total Cost</h3>
                        <p class="h4"><strong>Rs.<span id="totalCost">{{response}}</span></strong></p>
                    </div>

                    <!-- Payment Method Section -->
                    <div class="form-section">
                        <h3>Payment Method</h3>
                        <div class="form-check payment-option">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="cod" checked>
                            <label class="form-check-label" for="cod">Cash on Delivery (COD)</label>
                        </div>
                        <div class="form-check payment-option">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="onlinePayment" value="onlinePayment" >
                            <label class="form-check-label" for="onlinePayment">Pay Now (Online Payment)</label>
                        </div>
                    </div>

                    <!-- Place Order Button -->
                    {{#if response}}
                    <div class="text-center place-order-btn">
                        <button class="btn btn-primary btn-lg btn-block" type="submit">Confirm Order</button>
                    </div>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>
</div>

<!-- jQuery AJAX Submission -->
<script>
    var frm = $('#order-form');

    frm.submit(function (e) {
        e.preventDefault();

        let isConfirm = confirm("Do you need to Place Order?");
        if (isConfirm) {
            $.ajax({
                type: frm.attr('method'),
                url: frm.attr('action'),
                data: frm.serialize(),
                
                success: function (data) {
                    console.log('Submission was successful.');

                    // Hide the form after successful submission
                    frm.hide();
                    var successMessage = '<p>Order placed successfully!</p>';
                    
                    // Add a button and redirect link
                    var myOrdersButton = '<button id="myOrdersBtn">Go to My Orders</button>';

                    // push the message and button to the container
                    $('#order-success-container').html(successMessage + myOrdersButton);

                      // Show the success container and add animation class
                    $('#order-success-container').show().addClass('fadeIn');

                    // Add a click event to the button to navigate to My Orders
                    $('#myOrdersBtn').click(function() {
                        window.location.href = '/myOrders';  // Change to your actual My Orders route
                    });
                },
                
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
            });
        }
    });
</script>


<div id="order-success-container"> </div>
